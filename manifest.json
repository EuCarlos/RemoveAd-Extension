{
	"manifest_version": 2,
	"name": "RemoveAd Extension",
	"description": "Bloqueador de an√∫ncios personalizavel e Open-Source",
	"version": "1.0.0",
	"content_scripts": [{
		"matches": [
			"http://*/*", 
			"https://*/*", 
			"http://*/", 
			"https://*/"
		],
		"exclude_matches": [
			"https://carlosalves.vercel.app/"
		],
		"js": ["main.js"] 
	}],
	"permissions": ["bookmarks", "onload"],
	"icons" : {
